@model IEnumerable<ClasificacionPeliculas.Models.Movie>

@{
    ViewData["Title"] = "Listado de películas";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Películas</div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                               
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.Director)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Actors)
                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Director)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Actors)
                                    </td>
                                    
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="card-footer">
                        <a asp-action="Create" class="btn btn-primary">Crear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>