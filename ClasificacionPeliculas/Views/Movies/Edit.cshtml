@model ClasificacionPeliculas.Models.Movie

@{
    ViewData["Title"] = "Edit";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form asp-action="Edit">
                    <div class="card-body">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Título</p>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Fecha de lanzamiento</p>
                                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Duración (min)</p>
                                    <input asp-for="Duration" class="form-control" type="number" step="5" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Director(es)</p>
                                    <input asp-for="Director" class="form-control" />
                                    <span asp-validation-for="Director" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Actor(es)</p>
                                    <input asp-for="Actors" class="form-control" />
                                    <span asp-validation-for="Actors" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Trama</p>
                                    <input asp-for="Plot" class="form-control" />
                                    <span asp-validation-for="Plot" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Calificación</p>
                                    <input asp-for="Rating" class="form-control" type="number" max="99.9" step="0.1" />
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Votos</p>
                                    <input asp-for="Votes" class="form-control" type="number" step="1" />
                                    <span asp-validation-for="Votes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">Url de Poster</p>
                                    <input asp-for="PosterUrl" class="form-control" />
                                    <span asp-validation-for="PosterUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <p class="control-label">IMDB ID</p>
                                    <input asp-for="ImdbId" class="form-control" />
                                    <span asp-validation-for="ImdbId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Grabar" class="btn btn-primary" /> <a asp-action="Index" class="btn btn-danger">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
