@model ClasificacionPeliculas.Models.personal_information

@{
    ViewData["Title"] = "Eliminar";
}

<p class="text-danger">¿Seguro que desea eliminar la información personal?</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-6">
            Ciudad
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.geonameidCity)
        </dd>
        <dt class = "col-sm-6">
            Nombre
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-6">
            Fecha de Nacimiento
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.date_of_birth)
        </dd>
        <dt class = "col-sm-6">
            Email
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-6">
            Número de telefono
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.phone_number)
        </dd>
        <dt class = "col-sm-6">
            Dirección
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.address)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </form>
</div>
