@model IEnumerable<ClasificacionPeliculas.Models.personal_information>

@{
    ViewData["Title"] = "Información Personal";
}

<div class="card-header">Información</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Ciudad
            </th>
            <th>
                Nombre
            </th>
            <th>
                Fecha de Nacimiento
            </th>
            <th>
               Email
            </th>
            <th>
                Número de telefono
            </th>
            <th>
                Dirección
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.geonameidCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_of_birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="card-footer">
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</div>
