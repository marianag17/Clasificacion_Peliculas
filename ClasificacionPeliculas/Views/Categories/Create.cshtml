@model ClasificacionPeliculasModel.Category

@{
    ViewData["Title"] = "Crear categoría";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form method="post" asp-action="Create">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        @if (Model != null)
                        {
                            @*@if(Model.Result.Result)*@
                            @if (ViewBag.Resultado)
                            {
                                <div>
                                    <p>Se ha almacenado correctamente la información</p>
                                </div>
                            }
                            else
                            {
                                <div>
                                    <p>Existió un error durante la transacción</p>
                                </div>
                            }
                        }

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Crear" class="btn btn-primary" /> <a asp-action="Index" class="btn btn-danger">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
